@model QLNT.Models.CustomerViewModel

@{
    ViewData["Title"] = "Thêm khách hàng mới";
}

<h1>Thêm khách hàng mới</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" enctype="multipart/form-data" method="post" id="createForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" required />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" required />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateOfBirth" class="control-label"></label>
                        <input asp-for="DateOfBirth" class="form-control" type="date" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label"></label>
                        <select asp-for="Gender" class="form-control">
                            <option value="">-- Chọn giới tính --</option>
                            <option value="Nam">Nam</option>
                            <option value="Nữ">Nữ</option>
                            <option value="Khác">Khác</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdentityCard" class="control-label"></label>
                        <input asp-for="IdentityCard" class="form-control" />
                        <span asp-validation-for="IdentityCard" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdentityCardIssueDate" class="control-label"></label>
                        <input asp-for="IdentityCardIssueDate" class="form-control" type="date" />
                        <span asp-validation-for="IdentityCardIssueDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdentityCardIssuePlace" class="control-label"></label>
                        <input asp-for="IdentityCardIssuePlace" class="form-control" />
                        <span asp-validation-for="IdentityCardIssuePlace" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Province" class="control-label"></label>
                        <input asp-for="Province" class="form-control" />
                        <span asp-validation-for="Province" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="District" class="control-label"></label>
                        <input asp-for="District" class="form-control" />
                        <span asp-validation-for="District" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ward" class="control-label"></label>
                        <input asp-for="Ward" class="form-control" />
                        <span asp-validation-for="Ward" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BankAccount" class="control-label"></label>
                        <input asp-for="BankAccount" class="form-control" />
                        <span asp-validation-for="BankAccount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BankName" class="control-label"></label>
                        <input asp-for="BankName" class="form-control" />
                        <span asp-validation-for="BankName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Occupation" class="control-label"></label>
                        <input asp-for="Occupation" class="form-control" />
                        <span asp-validation-for="Occupation" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Workplace" class="control-label"></label>
                        <input asp-for="Workplace" class="form-control" />
                        <span asp-validation-for="Workplace" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EmergencyContact" class="control-label"></label>
                        <input asp-for="EmergencyContact" class="form-control" />
                        <span asp-validation-for="EmergencyContact" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmergencyPhone" class="control-label"></label>
                        <input asp-for="EmergencyPhone" class="form-control" />
                        <span asp-validation-for="EmergencyPhone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Consultant" class="control-label"></label>
                        <input asp-for="Consultant" class="form-control" />
                        <span asp-validation-for="Consultant" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConsultantPhone" class="control-label"></label>
                        <input asp-for="ConsultantPhone" class="form-control" />
                        <span asp-validation-for="ConsultantPhone" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="AccessCode" class="control-label"></label>
                        <input asp-for="AccessCode" class="form-control" />
                        <span asp-validation-for="AccessCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IsForeigner" class="control-label"></label>
                        <input asp-for="IsForeigner" class="form-control" type="checkbox" />
                        <span asp-validation-for="IsForeigner" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Note" class="control-label"></label>
                        <textarea asp-for="Note" class="form-control"></textarea>
                        <span asp-validation-for="Note" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="RepresentativeImageFile" class="control-label"></label>
                        <input asp-for="RepresentativeImageFile" class="form-control" type="file" accept="image/*" required />
                        <span asp-validation-for="RepresentativeImageFile" class="text-danger"></span>
                        <div id="representativeImagePreview" class="mt-2" style="display: none;">
                            <img id="previewImage" src="#" alt="Preview" style="max-width: 200px; max-height: 200px;" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="FrontIdentityCardFile" class="control-label"></label>
                        <input asp-for="FrontIdentityCardFile" class="form-control" type="file" accept="image/*" />
                        <span asp-validation-for="FrontIdentityCardFile" class="text-danger"></span>
                        <div id="frontIdCardPreview" class="mt-2" style="display: none;">
                            <img id="previewFrontIdCard" src="#" alt="Preview" style="max-width: 200px; max-height: 200px;" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="BackIdentityCardFile" class="control-label"></label>
                        <input asp-for="BackIdentityCardFile" class="form-control" type="file" accept="image/*" />
                        <span asp-validation-for="BackIdentityCardFile" class="text-danger"></span>
                        <div id="backIdCardPreview" class="mt-2" style="display: none;">
                            <img id="previewBackIdCard" src="#" alt="Preview" style="max-width: 200px; max-height: 200px;" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="PortraitFile" class="control-label"></label>
                        <input asp-for="PortraitFile" class="form-control" type="file" accept="image/*" />
                        <span asp-validation-for="PortraitFile" class="text-danger"></span>
                        <div id="portraitPreview" class="mt-2" style="display: none;">
                            <img id="previewPortrait" src="#" alt="Preview" style="max-width: 200px; max-height: 200px;" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Xử lý preview ảnh
        function readURL(input, previewId, previewContainerId) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    $(previewId).attr('src', e.target.result);
                    $(previewContainerId).show();
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#RepresentativeImageFile").change(function() {
            readURL(this, '#previewImage', '#representativeImagePreview');
        });

        $("#FrontIdentityCardFile").change(function() {
            readURL(this, '#previewFrontIdCard', '#frontIdCardPreview');
        });

        $("#BackIdentityCardFile").change(function() {
            readURL(this, '#previewBackIdCard', '#backIdCardPreview');
        });

        $("#PortraitFile").change(function() {
            readURL(this, '#previewPortrait', '#portraitPreview');
        });

        // Kiểm tra trước khi submit
        $("#createForm").submit(function(e) {
            var representativeImage = $("#RepresentativeImageFile").val();
            if (!representativeImage) {
                e.preventDefault();
                alert("Vui lòng chọn ảnh đại diện");
                return false;
            }
            return true;
        });
    </script>
} 