@model IEnumerable<QLNT.Models.InvoiceDetail>

@{
    ViewData["Title"] = "Danh sách chi tiết hóa đơn";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Thêm chi tiết mới</a>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Mã chi tiết</th>
                        <th>Hóa đơn</th>
                        <th>Tên khoản phí</th>
                        <th>Đơn giá</th>
                        <th>Số lượng</th>
                        <th>Đơn vị</th>
                        <th>Thành tiền</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.InvoiceDetailId</td>
                            <td>@item.Invoice?.InvoiceId</td>
                            <td>@item.ItemName</td>
                            <td>@item.UnitPrice.ToString("N0") đ</td>
                            <td>@item.Quantity</td>
                            <td>@item.Unit</td>
                            <td>@item.Amount.ToString("N0") đ</td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Details" asp-route-id="@item.InvoiceDetailId" class="btn btn-info btn-sm">Chi tiết</a>
                                    <a asp-action="Edit" asp-route-id="@item.InvoiceDetailId" class="btn btn-warning btn-sm">Sửa</a>
                                    <a asp-action="Delete" asp-route-id="@item.InvoiceDetailId" class="btn btn-danger btn-sm">Xóa</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div> 