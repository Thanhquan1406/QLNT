@model QLNT.Models.Contract
@using QLNT.Extensions

@{
    ViewData["Title"] = "Xóa hợp đồng";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="alert alert-danger">
        <h4>Bạn có chắc chắn muốn xóa hợp đồng này?</h4>
    </div>

    <div class="card">
        <div class="card-header">
            <h4>Thông tin hợp đồng</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ContractNumber)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ContractNumber)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Room)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Room.Name)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Customer)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Customer.FullName)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.StartDate)</dt>
                <dd class="col-sm-9">@Model.StartDate.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EndDate)</dt>
                <dd class="col-sm-9">@Model.EndDate.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.Status == ContractStatus.Active ? "bg-success" : 
                                        Model.Status == ContractStatus.AboutToExpire ? "bg-warning" : 
                                        Model.Status == ContractStatus.Expired ? "bg-danger" : "bg-secondary")">
                        @Model.Status.GetDisplayName()
                    </span>
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div> 