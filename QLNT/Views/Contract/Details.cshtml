@model QLNT.Models.Contract
@using QLNT.Extensions

@{
    ViewData["Title"] = "Chi tiết hợp đồng";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-header">
            <h4>Thông tin hợp đồng</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ContractNumber)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ContractNumber)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Room)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Room.Name)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Customer)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Customer.FullName)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SignDate)</dt>
                <dd class="col-sm-9">@Model.SignDate.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.StartDate)</dt>
                <dd class="col-sm-9">@Model.StartDate.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EndDate)</dt>
                <dd class="col-sm-9">@Model.EndDate.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Representative)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Representative)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.RentalPrice)</dt>
                <dd class="col-sm-9">@Model.RentalPrice.ToString("N0")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PaymentCycle)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PaymentCycle)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PaymentStartDate)</dt>
                <dd class="col-sm-9">@Model.PaymentStartDate.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Deposit)</dt>
                <dd class="col-sm-9">@Model.Deposit.ToString("N0")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DepositPaid)</dt>
                <dd class="col-sm-9">@Model.DepositPaid.ToString("N0")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DepositRemaining)</dt>
                <dd class="col-sm-9">@Model.DepositRemaining.ToString("N0")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DiscountMonths)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DiscountMonths)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MonthlyDiscount)</dt>
                <dd class="col-sm-9">@Model.MonthlyDiscount.ToString("N0")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.Status == ContractStatus.Active ? "bg-success" : 
                                        Model.Status == ContractStatus.AboutToExpire ? "bg-warning" : 
                                        Model.Status == ContractStatus.Expired ? "bg-danger" : "bg-secondary")">
                        @Model.Status.GetDisplayName()
                    </span>
                </dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Note)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Note)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.InvoiceTemplate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.InvoiceTemplate)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Sửa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div> 