@model QLNT.Models.Service

@{
    ViewData["Title"] = "Chi tiết dịch vụ";
}

<div class="container">
    <h1>Chi tiết dịch vụ</h1>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ServiceName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ServiceName)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ServiceType)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ServiceType)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PriceType)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PriceType)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Price)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Unit)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Unit)</dd>

                <dt class="col-sm-3">Tòa nhà sử dụng</dt>
                <dd class="col-sm-9">
                    @foreach (var building in Model.Buildings)
                    {
                        <span class="badge bg-primary">@building.Name</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Sửa</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Xóa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div> 