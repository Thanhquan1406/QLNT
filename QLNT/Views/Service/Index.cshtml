@model IEnumerable<QLNT.Models.Service>

@{
    ViewData["Title"] = "Danh sách dịch vụ";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Danh sách dịch vụ</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm mới
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        <input type="checkbox" class="form-check-input" />
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ServiceCode)
                    </th>
                    <th>
                        Thao tác
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ServiceName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ServiceType)
                    </th>
                    <th>
                        Giá tiền
                    </th>
                    <th>
                        Mặc định
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" class="form-check-input" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ServiceCode)
                        </td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ServiceName)
                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                <div class="text-muted small">@item.Description</div>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ServiceType)
                        </td>
                        <td>
                            @item.Price.ToString("N0") đ/@item.Unit
                        </td>
                        <td>
                            @if (item.BuildingServices.Any(bs => bs.IsActive))
                            {
                                <span class="badge bg-success">Có</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Không</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Xử lý checkbox header
            $('thead input[type="checkbox"]').change(function () {
                var isChecked = $(this).prop('checked');
                $('tbody input[type="checkbox"]').prop('checked', isChecked);
            });
        });
    </script>
} 