@model IEnumerable<QLNT.Models.Room>

@{
    ViewData["Title"] = "Danh sách phòng";
}

<h1>Danh sách phòng</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm phòng mới</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Code)</th>
            <th>Tòa nhà</th>
            <th>@Html.DisplayNameFor(model => model.Floor)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.RentalFee)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>@Html.DisplayNameFor(model => model.IsActive)</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Code)</td>
                <td>@(item.Building?.Name ?? "N/A")</td>
                <td>@Html.DisplayFor(modelItem => item.Floor)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.RentalFee)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@(item.IsActive ? "Hoạt động" : "Không hoạt động")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table> 