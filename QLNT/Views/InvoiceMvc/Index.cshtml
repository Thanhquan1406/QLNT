@model IEnumerable<QLNT.Models.Invoice>

@{
    ViewData["Title"] = "Danh sách hóa đơn";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Tạo hóa đơn mới</a>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Mã hóa đơn</th>
                        <th>Hợp đồng</th>
                        <th>Loại hóa đơn</th>
                        <th>Kỳ</th>
                        <th>Ngày lập</th>
                        <th>Hạn thanh toán</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.InvoiceId</td>
                            <td>@item.Contract?.ContractNumber</td>
                            <td>@item.InvoiceType</td>
                            <td>@item.Period</td>
                            <td>@item.IssueDate.ToString("dd/MM/yyyy")</td>
                            <td>@item.DueDate.ToString("dd/MM/yyyy")</td>
                            <td>@item.TotalAmount.ToString("N0") đ</td>
                            <td>
                                <span class="badge @(item.Status == InvoiceStatus.Paid ? "bg-success" : 
                                                    item.Status == InvoiceStatus.Pending ? "bg-warning" : 
                                                    item.Status == InvoiceStatus.Overdue ? "bg-danger" : "bg-secondary")">
                                    @item.Status
                                </span>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Details" asp-route-id="@item.InvoiceId" class="btn btn-info btn-sm">Chi tiết</a>
                                    <a asp-action="Edit" asp-route-id="@item.InvoiceId" class="btn btn-warning btn-sm">Sửa</a>
                                    <a asp-action="Delete" asp-route-id="@item.InvoiceId" class="btn btn-danger btn-sm">Xóa</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div> 