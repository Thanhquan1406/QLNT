@model QLNT.Models.Invoice

@{
    ViewData["Title"] = "Xóa hóa đơn";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <h3>Bạn có chắc chắn muốn xóa hóa đơn này?</h3>
    <div class="card">
        <div class="card-body">
            <h4>Thông tin hóa đơn</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Mã hóa đơn:</dt>
                <dd class="col-sm-8">@Model.InvoiceId</dd>

                <dt class="col-sm-4">Hợp đồng:</dt>
                <dd class="col-sm-8">@Model.Contract?.ContractNumber</dd>

                <dt class="col-sm-4">Loại hóa đơn:</dt>
                <dd class="col-sm-8">@Model.InvoiceType</dd>

                <dt class="col-sm-4">Kỳ:</dt>
                <dd class="col-sm-8">@Model.Period</dd>

                <dt class="col-sm-4">Ngày lập:</dt>
                <dd class="col-sm-8">@Model.IssueDate.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4">Hạn thanh toán:</dt>
                <dd class="col-sm-8">@Model.DueDate.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4">Trạng thái:</dt>
                <dd class="col-sm-8">
                    <span class="badge @(Model.Status == InvoiceStatus.Paid ? "bg-success" : 
                                        Model.Status == InvoiceStatus.Pending ? "bg-warning" : 
                                        Model.Status == InvoiceStatus.Overdue ? "bg-danger" : "bg-secondary")">
                        @Model.Status
                    </span>
                </dd>

                <dt class="col-sm-4">Tổng tiền:</dt>
                <dd class="col-sm-8">@Model.TotalAmount.ToString("N0") đ</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="InvoiceId" />
                <input type="submit" value="Xóa" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </form>
        </div>
    </div>
</div> 