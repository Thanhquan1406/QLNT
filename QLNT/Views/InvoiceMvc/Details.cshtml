@model QLNT.Models.Invoice

@{
    ViewData["Title"] = "Chi tiết hóa đơn";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h4>Thông tin hóa đơn</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Mã hóa đơn:</dt>
                        <dd class="col-sm-8">@Model.InvoiceId</dd>

                        <dt class="col-sm-4">Hợp đồng:</dt>
                        <dd class="col-sm-8">@Model.Contract?.ContractNumber</dd>

                        <dt class="col-sm-4">Loại hóa đơn:</dt>
                        <dd class="col-sm-8">@Model.InvoiceType</dd>

                        <dt class="col-sm-4">Kỳ:</dt>
                        <dd class="col-sm-8">@Model.Period</dd>

                        <dt class="col-sm-4">Ngày lập:</dt>
                        <dd class="col-sm-8">@Model.IssueDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Hạn thanh toán:</dt>
                        <dd class="col-sm-8">@Model.DueDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Trạng thái:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Status == InvoiceStatus.Paid ? "bg-success" : 
                                                Model.Status == InvoiceStatus.Pending ? "bg-warning" : 
                                                Model.Status == InvoiceStatus.Overdue ? "bg-danger" : "bg-secondary")">
                                @Model.Status
                            </span>
                        </dd>

                        @if (Model.PaidDate.HasValue)
                        {
                            <dt class="col-sm-4">Ngày thanh toán:</dt>
                            <dd class="col-sm-8">@Model.PaidDate.Value.ToString("dd/MM/yyyy")</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.PaymentMethod))
                        {
                            <dt class="col-sm-4">Phương thức thanh toán:</dt>
                            <dd class="col-sm-8">@Model.PaymentMethod</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.ReferenceNumber))
                        {
                            <dt class="col-sm-4">Số tham chiếu:</dt>
                            <dd class="col-sm-8">@Model.ReferenceNumber</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <dt class="col-sm-4">Ghi chú:</dt>
                            <dd class="col-sm-8">@Model.Notes</dd>
                        }
                    </dl>
                </div>

                <div class="col-md-6">
                    <h4>Chi tiết hóa đơn</h4>
                    <hr />
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Tên khoản phí</th>
                                <th>Đơn giá</th>
                                <th>Số lượng</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detail in Model.InvoiceDetails)
                            {
                                <tr>
                                    <td>@detail.ItemName</td>
                                    <td>@detail.UnitPrice.ToString("N0") đ</td>
                                    <td>@detail.Quantity @detail.Unit</td>
                                    <td>@detail.Amount.ToString("N0") đ</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="3" class="text-end">Tổng cộng:</th>
                                <th>@Model.TotalAmount.ToString("N0") đ</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.InvoiceId" class="btn btn-warning">Sửa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div> 