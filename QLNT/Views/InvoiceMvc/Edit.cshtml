@model QLNT.Models.Invoice

@{
    ViewData["Title"] = "Chỉnh sửa hóa đơn";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="InvoiceId" />
                <input type="hidden" asp-for="ContractId" />
                <input type="hidden" asp-for="InvoiceType" />
                <input type="hidden" asp-for="Period" />
                <input type="hidden" asp-for="IssueDate" />
                <input type="hidden" asp-for="InvoiceNumber" />

                <div class="form-group mb-3">
                    <label class="control-label">Mã hóa đơn</label>
                    <input asp-for="InvoiceNumber" class="form-control" readonly />
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Hợp đồng</label>
                    <input asp-for="Contract.ContractNumber" class="form-control" readonly />
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Loại hóa đơn</label>
                    <input asp-for="InvoiceType" class="form-control" readonly />
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Kỳ</label>
                    <input asp-for="Period" class="form-control" readonly />
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Ngày lập</label>
                    <input asp-for="IssueDate" class="form-control" type="date" readonly />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DueDate" class="control-label">Hạn thanh toán</label>
                    <input asp-for="DueDate" class="form-control" type="date" />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Status" class="control-label">Trạng thái</label>
                    <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<InvoiceStatus>()"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PaidDate" class="control-label">Ngày thanh toán</label>
                    <input asp-for="PaidDate" class="form-control" type="date" />
                    <span asp-validation-for="PaidDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PaymentMethod" class="control-label">Phương thức thanh toán</label>
                    <input asp-for="PaymentMethod" class="form-control" />
                    <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ReferenceNumber" class="control-label">Số tham chiếu</label>
                    <input asp-for="ReferenceNumber" class="form-control" />
                    <span asp-validation-for="ReferenceNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Notes" class="control-label">Ghi chú</label>
                    <textarea asp-for="Notes" class="form-control"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 