@model QLNT.Models.Invoice

@{
    ViewData["Title"] = "Tạo hóa đơn mới";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3" style="display: none;">
                    <label asp-for="InvoiceNumber" class="control-label">Mã hóa đơn</label>
                    <input asp-for="InvoiceNumber" class="form-control" readonly />
                    <span asp-validation-for="InvoiceNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Tòa nhà</label>
                    <select id="BuildingId" name="BuildingId" class="form-control" asp-items="ViewBag.Buildings">
                        <option value="">-- Chọn tòa nhà --</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Phòng</label>
                    <select id="RoomId" name="RoomId" class="form-control">
                        <option value="">-- Chọn phòng --</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ContractId" class="control-label">Hợp đồng</label>
                    <select asp-for="ContractId" id="ContractId" name="ContractId" class="form-control">
                        <option value="">-- Chọn hợp đồng --</option>
                    </select>
                    <span asp-validation-for="ContractId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="InvoiceType" class="control-label">Loại hóa đơn</label>
                    <select asp-for="InvoiceType" class="form-control" asp-items="Html.GetEnumSelectList<InvoiceType>()">
                        <option value="">-- Chọn loại hóa đơn --</option>
                    </select>
                    <span asp-validation-for="InvoiceType" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Period" class="control-label">Kỳ</label>
                    <input asp-for="Period" id="Period" name="Period" class="form-control" readonly />
                    <span asp-validation-for="Period" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="IssueDate" class="control-label">Ngày lập</label>
                    <input asp-for="IssueDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="IssueDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DueDate" class="control-label">Hạn thanh toán</label>
                    <input asp-for="DueDate" class="form-control" type="date" value="@DateTime.Now.AddDays(7).ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Status" class="control-label">Trạng thái</label>
                    <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<InvoiceStatus>()">
                        <option value="">-- Chọn trạng thái --</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PaymentMethod" class="control-label">Phương thức thanh toán</label>
                    <input asp-for="PaymentMethod" class="form-control" />
                    <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ReferenceNumber" class="control-label">Số tham chiếu</label>
                    <input asp-for="ReferenceNumber" class="form-control" />
                    <span asp-validation-for="ReferenceNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Notes" class="control-label">Ghi chú</label>
                    <textarea asp-for="Notes" class="form-control"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Tạo" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function () {
            // Xử lý khi chọn tòa nhà
            $('#BuildingId').change(function () {
                var buildingId = $(this).val();
                var $roomSelect = $('#RoomId');
                var $contractSelect = $('#ContractId');
                
                // Reset các dropdown phụ thuộc
                $roomSelect.empty().append('<option value="">-- Chọn phòng --</option>');
                $contractSelect.empty().append('<option value="">-- Chọn hợp đồng --</option>');
                
                if (buildingId) {
                    // Lấy danh sách phòng theo tòa nhà
                    $.getJSON('/InvoiceMvc/GetRoomsByBuilding/' + buildingId, function (rooms) {
                        $.each(rooms, function (i, room) {
                            $roomSelect.append($('<option></option>')
                                .attr('value', room.id)
                                .text(room.name));
                        });
                    });
                }
            });

            // Xử lý khi chọn phòng
            $('#RoomId').change(function () {
                var roomId = $(this).val();
                var $contractSelect = $('#ContractId');
                
                // Reset dropdown hợp đồng
                $contractSelect.empty().append('<option value="">-- Chọn hợp đồng --</option>');
                
                if (roomId) {
                    // Lấy danh sách hợp đồng theo phòng
                    $.getJSON('/InvoiceMvc/GetContractsByRoom/' + roomId, function (contracts) {
                        $.each(contracts, function (i, contract) {
                            $contractSelect.append($('<option></option>')
                                .attr('value', contract.id)
                                .text(contract.contractNumber));
                        });
                    });
                }
            });

            // Xử lý khi chọn hợp đồng
            $('#ContractId').change(function () {
                var contractId = $(this).val();
                var $periodInput = $('#Period');
                
                // Reset giá trị kỳ
                $periodInput.val('');
                
                if (contractId) {
                    // Lấy thông tin hợp đồng để lấy PaymentCycle
                    $.getJSON('/InvoiceMvc/GetContractInfo/' + contractId, function (contract) {
                        if (contract && contract.paymentCycle) {
                            // Hiển thị PaymentCycle mặc định
                            $periodInput.val(contract.paymentCycle);
                        }
                    });
                }
            });

            // Đảm bảo form được submit với ContractId đã chọn
            $('form').submit(function(e) {
                var contractId = $('#ContractId').val();
                if (!contractId) {
                    e.preventDefault();
                    alert('Vui lòng chọn hợp đồng');
                    return false;
                }
            });
        });
    </script>
} 